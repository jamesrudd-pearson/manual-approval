{
  "plugins": {
    "commit-analyzer": {
      "name": "default@^1.0.0"
    },
    "ci-condition": {
      "name": "default"
    },
    "changelog-generator": {
      "name": "default",
      "options": {
        "emojis": "true"
      }
    },
    "hooks": {
      "names": [
        "goreleaser",
        "exec"
      ],
      "options": {
        "exec_on_success": "sed -i \"s|\\(image: docker://ghcr.io/jamesrudd-pearson/manual-approval:\\)[0-9]\\+\\.[0-9]\\+\\.[0-9]\\+|{{.NewRelease.Version}}|g\" action.yaml"
      }
    }
  }
}
